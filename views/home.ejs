<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <style>
    body {
      font-family: 'Courier New', Courier, monospace;
      background-color: #f2f2f2;
      color: #333;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
    }

    h1 {
      color: #007acc;
      text-align: center;
      margin-bottom: 20px;
    }

    .container {
      width: 80%;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
      overflow: hidden;
    }

    .table-container {
      max-height: 70vh;
      overflow-y: auto;
      margin-top: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #fff;
      border-radius: 8px;
      color: #333;
    }

    th, td {
      padding: 15px;
      border: 1px solid #ddd;
      text-align: left;
      white-space: nowrap;
      font-size: 14px;
    }

    th {
      background-color: #007acc;
      color: #fff;
      position: sticky;
      top: 0;
      z-index: 2;
      border-radius: 8px 8px 0 0;
    }

    tr {
      transition: background-color 0.3s ease;
    }

    tr:hover {
      background-color: #f0f0f0;
    }

    form {
      text-align: center;
    }

    label {
      display: block;
      margin-bottom: 10px;
      color: #007acc;
      font-size: 16px;
    }

    input {
      width: calc(100% - 16px);
      padding: 10px;
      box-sizing: border-box;
      margin-bottom: 20px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 14px;
      background-color: #f9f9f9;
      color: #333;
    }

    button {
      padding: 12px 24px;
      background-color: #007acc;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button:hover {
      background-color: #005d8e;
      transform: scale(1.05);
    }

    a {
      color: #007acc;
      text-decoration: none;
      transition: text-decoration 0.2s ease;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>URL Shortener</h1>
  <div class="container">
    <form method="POST" action="/url">
      <label for="url">Enter your Original URL</label>
      <input type="url" id="url" name="url" placeholder="http://www.example.com" required>
      <button type="submit">Generate Short URL</button>
    </form>
  </div>
  <div class="container">
    <% if (locals.id) { %>
      <p>
        URL Generated:
        <a href="http://localhost:8004/url/<%=id%>" target="_blank">
          http://localhost:8004/url/<%=id%></a>
      </p>
    <% } %>
    <div class="table-container">
      <% if (locals.urls) { %>
        <table>
          <thead>
            <th>S.No</th>
            <th>Short ID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectUrl %></td>
                <td><%= url.clickCount %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
</body>
</html>
